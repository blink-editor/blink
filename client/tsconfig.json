{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": false,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": [
		"src/**/*"
	]
}
